<div class="flex flex-col min-h-screen items-start relative bg-white">
  <div class="flex flex-col min-h-screen items-start relative self-stretch w-full bg-gray-50">
    <div class="relative self-stretch w-full min-h-screen bg-gray-50">
      <!-- Header -->
      <div class="flex flex-col w-full items-start pt-0 pb-px px-4 sm:px-6 md:px-12 lg:px-24 bg-white border-b [border-bottom-style:solid] border-[#0000001a]">
        <div class="flex flex-col items-start gap-2 pt-6 pb-0 px-6 relative w-full max-w-7xl mx-auto">
          <div class="flex h-12 items-center gap-3 relative w-full">
            <svg class="w-10 h-10 sm:w-12 sm:h-12" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
            </svg>
            <div class="relative">
              <div class="[font-family:'Inter',Helvetica] font-normal text-neutral-950 text-base tracking-[-0.31px] leading-6">
                Composer ma famille
              </div>
            </div>
          </div>
          <div class="relative w-full">
            <p class="[font-family:'Inter',Helvetica] font-normal text-[#495565] text-sm sm:text-base tracking-[-0.31px] leading-6">
              Ajoutez les membres de votre famille pour commencer
            </p>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="w-full px-4 sm:px-6 md:px-12 lg:px-24 pt-6 pb-12">
        <div class="max-w-7xl mx-auto">
          <!-- Progress Section -->
          <div class="flex w-full relative mb-6 flex-col items-start gap-2">
            <div class="flex items-center justify-between relative self-stretch w-full">
              <div class="relative">
                <div class="[font-family:'Inter',Helvetica] font-normal text-[#495565] text-sm tracking-[-0.15px] leading-5">
                  √âtape 2/2
                </div>
              </div>
              <div class="relative">
                <div id="member-count" class="[font-family:'Inter',Helvetica] font-normal text-[#495565] text-sm tracking-[-0.15px] leading-5">
                  <%= @family.members.count %> membre<%= @family.members.count != 1 ? 's' : '' %> ajout√©<%= @family.members.count != 1 ? 's' : '' %>
                </div>
              </div>
            </div>
            <div class="relative self-stretch w-full h-2 rounded-[16777200px] [background:linear-gradient(90deg,rgba(43,127,255,1)_0%,rgba(152,16,250,1)_100%),linear-gradient(0deg,rgba(229,231,235,1)_0%,rgba(229,231,235,1)_100%)]"></div>
          </div>

          <!-- Members Section -->
          <div class="flex w-full relative mb-6 flex-col items-start gap-8 md:gap-12 p-6 md:p-8 bg-white rounded-[14px] border border-solid border-[#0000001a]">
            <div class="flex items-center justify-between w-full relative flex-wrap gap-4">
              <div class="relative">
                <div class="[font-family:'Inter',Helvetica] font-normal text-neutral-950 text-base tracking-[-0.31px] leading-6">
                  Membres de la famille
                </div>
              </div>
              <button
                id="add-member-btn"
                class="all-[unset] box-border flex items-center gap-2 px-4 py-2 h-9 bg-[#030213] rounded-lg cursor-pointer hover:bg-opacity-90 transition"
                data-action="click->members#openModal"
              >
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                <div class="[font-family:'Inter',Helvetica] font-medium text-white text-sm tracking-[-0.15px] leading-5">
                  Ajouter un membre
                </div>
              </button>
            </div>

            <!-- Members Container -->
            <div id="members-container" class="w-full min-h-[200px] relative">
              <% if @family.members.empty? %>
                <!-- Empty State -->
                <div id="empty-state" class="flex flex-col items-center justify-center py-12">
                  <svg class="w-16 h-16 mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.856-1.487M15 10a3 3 0 11-6 0 3 3 0 016 0zM6 20a9 9 0 0118 0v2h2v-2a11 11 0 00-22 0v2h2v-2z"></path>
                  </svg>
                  <p class="[font-family:'Inter',Helvetica] font-normal text-[#697282] text-base text-center tracking-[-0.31px] leading-6 mb-2">
                    Aucun membre pour le moment
                  </p>
                  <p class="[font-family:'Inter',Helvetica] font-normal text-[#697282] text-sm text-center tracking-[-0.15px] leading-5">
                    Cliquez sur "Ajouter un membre" pour commencer
                  </p>
                </div>
              <% else %>
                <!-- Members List -->
                <div id="members-list" class="flex flex-col gap-3">
                  <% @family.members.each do |member| %>
                    <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-[10px] border border-solid border-[#e5e7eb] group hover:bg-gray-100 transition">
                      <!-- Avatar -->
                      <div class="flex-shrink-0">
                        <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg [background:linear-gradient(135deg,rgba(43,127,255,1)_0%,rgba(152,16,250,1)_100%)]">
                          <%= member.name.present? ? member.name[0].upcase : '?' %>
                        </div>
                      </div>

                      <!-- Member Info -->
                      <div class="flex-grow">
                        <div class="[font-family:'Inter',Helvetica] font-medium text-neutral-950 text-base tracking-[-0.31px] leading-6">
                          <%= member.name %>
                        </div>
                        <div class="flex gap-4 mt-1">
                          <% if member.birthday %>
                            <span class="[font-family:'Inter',Helvetica] font-normal text-[#697282] text-sm tracking-[-0.15px] leading-5">
                              <%= calculate_age(member.birthday) %> ans
                            </span>
                            <span class="[font-family:'Inter',Helvetica] font-normal text-[#697282] text-sm tracking-[-0.15px] leading-5">
                              <%= member.birthday.strftime('%d/%m/%Y') %>
                            </span>
                          <% end %>
                          <% if member.zipcode %>
                            <span class="[font-family:'Inter',Helvetica] font-normal text-[#697282] text-sm tracking-[-0.15px] leading-5">
                              üìç <%= member.zipcode %>
                            </span>
                          <% end %>
                        </div>
                      </div>

                      <!-- Action Buttons -->
                      <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition">
                        <%= link_to edit_family_member_path(@family, member), class: "p-2 hover:bg-white rounded-lg transition" do %>
                          <svg class="w-5 h-5 text-[#495565]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                          </svg>
                        <% end %>
                        <%= button_to family_member_path(@family, member), method: :delete, data: { confirm: "√ätes-vous s√ªr?" }, class: "p-2 hover:bg-white rounded-lg transition" do %>
                          <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                          </svg>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Info Box -->
          <div class="flex w-full relative mb-6 flex-col items-start gap-2 p-6 bg-blue-50 rounded-[10px] border border-solid border-[#bddaff]">
            <div class="w-full relative">
              <p class="[font-family:'Inter',Helvetica] font-normal text-[#1b388e] text-base tracking-[-0.31px] leading-6">
                üí° Pourquoi ces informations ?
              </p>
            </div>
            <div class="flex flex-col items-start gap-2 relative w-full">
              <div class="relative w-full">
                <p class="[font-family:'Inter',Helvetica] font-normal text-[#193bb8] text-sm tracking-[-0.15px] leading-5">
                  ‚Ä¢ <span class="font-bold">Date de naissance :</span> Pour calculer les rappels de vaccins
                </p>
              </div>
              <div class="relative w-full">
                <p class="[font-family:'Inter',Helvetica] font-normal text-[#193bb8] text-sm tracking-[-0.15px] leading-5">
                  ‚Ä¢ <span class="font-bold">Code postal :</span> Pour d√©terminer la zone de vacances scolaires
                </p>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex w-full relative items-start gap-4 flex-col sm:flex-row">
            <%= link_to "Passer cette √©tape", family_path(@family), class: "all-[unset] box-border flex items-center justify-center gap-2 px-4 py-2 bg-white border border-solid border-[#0000001a] h-9 w-full sm:flex-1 rounded-lg cursor-pointer hover:bg-gray-50 transition [font-family:'Inter',Helvetica] font-medium text-neutral-950 text-sm tracking-[-0.15px] leading-5" %>
            <%= link_to "Terminer", family_path(@family), class: "all-[unset] box-border [background:linear-gradient(90deg,rgba(43,127,255,1)_0%,rgba(152,16,250,1)_100%)] h-9 w-full sm:flex-1 rounded-lg cursor-pointer flex items-center justify-center gap-2 hover:opacity-90 transition [font-family:'Inter',Helvetica] font-medium text-white text-sm tracking-[-0.15px] leading-5" do %>
              <span>Terminer</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal for adding/editing member -->
<div id="add-member-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4" data-controller="members">
  <div class="bg-white rounded-[14px] w-full max-w-md p-6 max-h-[90vh] overflow-y-auto">
    <div class="flex items-center justify-between mb-6">
      <h2 class="[font-family:'Inter',Helvetica] font-medium text-neutral-950 text-xl tracking-[-0.31px] leading-6">
        <span id="modal-title">Ajouter un membre</span>
      </h2>
      <button
        id="close-modal-btn"
        class="w-8 h-8 flex items-center justify-center rounded-lg hover:bg-gray-100 cursor-pointer"
        data-action="click->members#closeModal"
      >
        <span class="text-2xl text-gray-500">&times;</span>
      </button>
    </div>

    <%= form_with model: [@family, @member], local: true, class: "flex flex-col gap-5" do |form| %>
      <div class="flex flex-col gap-2">
        <%= form.label :name, "Pr√©nom *", class: "[font-family:'Inter',Helvetica] font-normal text-[#354152] text-base tracking-[-0.31px] leading-6" %>
        <%= form.text_field :name, required: true, placeholder: "Marie", class: "h-12 px-4 bg-white rounded-[10px] border border-solid border-[#d0d5db] [font-family:'Inter',Helvetica] font-normal text-base tracking-[-0.31px]" %>
      </div>

      <div class="flex flex-col gap-2">
        <%= form.label :birthday, "Date de naissance *", class: "[font-family:'Inter',Helvetica] font-normal text-[#354152] text-base tracking-[-0.31px] leading-6" %>
        <%= form.date_field :birthday, required: true, class: "h-12 px-4 bg-white rounded-[10px] border border-solid border-[#d0d5db] [font-family:'Inter',Helvetica] font-normal text-base tracking-[-0.31px]" %>
      </div>

      <div class="flex flex-col gap-2">
        <%= form.label :zipcode, "Code postal *", class: "[font-family:'Inter',Helvetica] font-normal text-[#354152] text-base tracking-[-0.31px] leading-6" %>
        <%= form.text_field :zipcode, required: true, pattern: "[0-9]{5}", placeholder: "75001", class: "h-12 px-4 bg-white rounded-[10px] border border-solid border-[#d0d5db] [font-family:'Inter',Helvetica] font-normal text-base tracking-[-0.31px]" %>
      </div>

      <div class="flex gap-4 mt-4">
        <button
          type="button"
          id="cancel-btn"
          class="flex-1 h-12 px-4 py-2 bg-white border border-solid border-[#0000001a] rounded-lg [font-family:'Inter',Helvetica] font-medium text-neutral-950 text-sm tracking-[-0.15px] leading-5 cursor-pointer hover:bg-gray-50 transition"
          data-action="click->members#closeModal"
        >
          Annuler
        </button>
        <%= form.submit "Ajouter", class: "flex-1 h-12 px-4 py-2 [background:linear-gradient(90deg,rgba(43,127,255,1)_0%,rgba(152,16,250,1)_100%)] rounded-lg [font-family:'Inter',Helvetica] font-medium text-white text-sm tracking-[-0.15px] leading-5 cursor-pointer hover:opacity-90 transition" %>
      </div>
    <% end %>
  </div>
</div>
