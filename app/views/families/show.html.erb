      <%= simple_form_for [@chat, @Message] do |f| %>
        <%= f.input :content %>
        <%= f.submit  %>
      <% end %>
    <% end %>
  </div>
  <hr>
  <% @members.each do |member| %>
    <span class="cards"><%= member.name %></span>
  <% end %>
</div>
