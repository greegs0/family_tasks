<div class="container mt-5">
  <div class="d-flex justify-content-between">
    <h1>Famille <%= @family.name %></h1>
  </div>
  <span>Nombre de membres : <%= @members.count %> | Code postal : <%= @family.zipcode %></span>
  <%= render 'shared/form', family: @family, member: @member %>
  <div class="chat-wrapper">
    <% if @chat %> <!-- true ou false -->
      <% @chat.messages.each do |msg| %>
        <p><%= msg.content %></p>
      <% end %>

