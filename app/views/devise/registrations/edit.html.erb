<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
      <div class="card shadow">
        <div class="card-body p-4 p-md-5">
          <h2 class="text-center mb-4">Modifier mon profil</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { class: "form-control-lg" },
                          label: "Email" %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div class="alert alert-info">
                  En attente de confirmation pour : <%= resource.unconfirmed_email %>
                </div>
              <% end %>

              <%= f.input :password,
                          hint: "Laissez vide si vous ne voulez pas le changer",
                          required: false,
                          input_html: { autocomplete: "new-password", class: "form-control-lg" },
                          label: "Nouveau mot de passe" %>
              <%= f.input :password_confirmation,
                          required: false,
                          input_html: { autocomplete: "new-password", class: "form-control-lg" },
                          label: "Confirmation du nouveau mot de passe" %>
              <%= f.input :current_password,
                          hint: "Nous avons besoin de votre mot de passe actuel pour confirmer les modifications",
                          required: true,
                          input_html: { autocomplete: "current-password", class: "form-control-lg" },
                          label: "Mot de passe actuel" %>
            </div>

            <div class="form-actions d-grid">
              <%= f.button :submit, "Mettre à jour", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <h5 class="mb-3">Supprimer mon compte</h5>
            <p class="text-muted small">Cette action est irréversible</p>
            <%= button_to "Supprimer mon compte",
                          registration_path(resource_name),
                          data: { confirm: "Êtes-vous sûr(e) ?", turbo_confirm: "Êtes-vous sûr(e) ?" },
                          method: :delete,
                          class: "btn btn-outline-danger" %>
          </div>

          <div class="text-center mt-3">
            <%= link_to "Retour", :back, class: "btn btn-link" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
