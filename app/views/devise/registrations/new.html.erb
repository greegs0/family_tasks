<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
      <div class="card shadow">
        <div class="card-body p-4 p-md-5">
          <h2 class="text-center mb-4">S'inscrire</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control-lg" },
                          label: "Email" %>
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password", class: "form-control-lg" },
                          label: "Mot de passe" %>
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password", class: "form-control-lg" },
                          label: "Confirmation du mot de passe" %>
            </div>

            <%= render "shared/form" member: @member%>

            <div class="form-actions d-grid">
              <%= f.button :submit, "S'inscrire", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
