<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
      <div class="card shadow">
        <div class="card-body p-4 p-md-5">
          <h2 class="text-center mb-4">Se connecter</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control-lg" },
                          label: "Email" %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-control-lg" },
                          label: "Mot de passe" %>
              <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions d-grid">
              <%= f.button :submit, "Se connecter", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
